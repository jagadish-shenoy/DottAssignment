<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView android:id="@+id/location_permission_rationale"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/location_permission_request"
              android:layout_centerInParent="true"
              android:layout_margin="32dp"/>

    <Button android:id="@+id/ready_to_grant_permission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ready_to_grant_permission"
            android:layout_below="@id/location_permission_rationale"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"/>
</RelativeLayout>